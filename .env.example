# ==========================================
# CONFIGURATION BASE DE DONNÉES
# ==========================================

# Option 1: PostgreSQL Local (mode offline)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=pos_app
DB_SSL=false

# Option 2: PostgreSQL Cloud via URL (recommandé pour staging/production)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# ==========================================
# SUPABASE (Auth & Database)
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_JWT_SECRET=your_jwt_secret
DEFAULT_TENANT_ID=your_tenant_id
SEED_TENANT_ID=your_seed_tenant_id

# ==========================================
# NF525 - CERTIFICATION INFOCERT
# ==========================================
# Clé privée fournie par INFOCERT pour la signature des tickets
# À obtenir après la certification
INFOCERT_PRIVATE_KEY=
# Identifiant commerce INFOCERT
INFOCERT_MERCHANT_ID=

# ==========================================
# SÉCURITÉ
# ==========================================
# Secret pour JWT (si authentification nécessaire)
JWT_SECRET=your_jwt_secret_key_here

# ==========================================
# ARCHIVAGE NF525
# ==========================================
# Chemin de stockage des archives (6 ans minimum)
ARCHIVE_PATH=./data/archives
# Fréquence d'archivage automatique
ARCHIVE_SCHEDULE=0 0 * * 0 # Chaque dimanche à minuit (format cron)

# ==========================================
# RGPD
# ==========================================
# Email du DPO (Data Protection Officer)
DPO_EMAIL=dpo@example.com
# Durée de conservation des données clients (en jours)
CUSTOMER_DATA_RETENTION=2190 # 6 ans (conformité comptable)

# ==========================================
# APPLICATION
# ==========================================
# Mode de l'application (development, staging, production)
NODE_ENV=development
# Port du serveur
PORT=3000
# URL de base de l'application
BASE_URL=http://localhost:3000
